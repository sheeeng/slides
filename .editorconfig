
# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{.,}*.{js{,*},y{a,}ml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 72

[Makefile]
indent_style = tab

# Follow https://google.github.io/styleguide/shellguide.html guide.
# shfmt -i 2 -ci -bn
# https://github.com/mvdan/sh/blob/master/cmd/shfmt/shfmt.1.scd
[*.sh]
# --indent
indent_style = space
indent_size = 2
# --language-dialect
shell_variant    = bash
simplify         = true
binary_next_line = true
# --case-indent
switch_case_indent = true
space_redirects  = true
keep_padding       = true
# --func-next-line
function_next_line = false
minify             = false
